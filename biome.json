{
    "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
    "vcs": {
        "enabled": false,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": false,
        "includes": [
            "**",
            "!!**/node_modules",
            "!!**/dist",
            "!!**/.git"
        ]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "lineWidth": 150,
        "indentWidth": 4,
        "useEditorconfig": false
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": "off"
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "indentStyle": "space",
            "semicolons": "asNeeded"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}